@model IEnumerable<Travel_agency.Models.TourPackage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.No_Of_Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.No_Of_Persons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PackageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.No_Of_Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.No_Of_Persons)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.DestinationId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TourPackageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TourPackageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TourPackageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
